<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:android="http://schemas.android.com/apk/res/android">
    <data>
        <variable name="category" type="net.iqbalfauzan.foodrecipe.model.Category"/>
    </data>
    <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

        <androidx.cardview.widget.CardView
                android:id="@+id/categoryView"
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:layout_gravity="center"
                app:cardBackgroundColor="@android:color/white"
                app:cardElevation="0dp"
                android:layout_margin="12dp"
                app:cardCornerRadius="4dp"
                app:layout_constraintDimensionRatio="H,1:1"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"/>

        <androidx.appcompat.widget.AppCompatImageView
                android:id="@+id/categoryImage"
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:layout_gravity="center"
                android:scaleType="centerInside"
                app:layout_constraintDimensionRatio="H,2.25:1"
                app:layout_constraintBottom_toBottomOf="@id/categoryView"
                app:layout_constraintEnd_toEndOf="@id/categoryView"
                app:layout_constraintStart_toStartOf="@id/categoryView"
                app:layout_constraintTop_toTopOf="@id/categoryView"
                app:imageUrl="@{category.imageCategory}"
                tools:src="@drawable/ic_favorite_black_24dp"/>
        <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/categoryName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@{category.nameCategory}"
                app:layout_constraintTop_toBottomOf="@id/categoryImage"
                app:layout_constraintStart_toStartOf="@id/categoryImage"
                app:layout_constraintEnd_toEndOf="@id/categoryImage"
                android:gravity="center"
                android:textStyle="bold"
                android:textColor="@android:color/black"
                tools:text="Beef"/>
    </androidx.constraintlayout.widget.ConstraintLayout>


</layout>